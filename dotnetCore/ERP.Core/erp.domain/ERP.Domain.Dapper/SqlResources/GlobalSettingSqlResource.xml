<?xml version="1.0" encoding="utf-8" ?>
<SqlResource>
  <GetByKey>
    SELECT [Id],[Key],[Value],[CreateTime],[LastUpdateTime]  FROM [dbo].[GlobalSettings] WITH(NOLOCK)
    Where [Key]=@Key
  </GetByKey>
  <Insert>
    INSERT INTO [dbo].[GlobalSettings]
    ([Id],[Key],[Value],[CreateTime],[LastUpdateTime])
    VALUES(@Id,@Key,@Value,GETDATE(),GETDATE())
  </Insert>
  <Update>
    UPDATE [dbo].[GlobalSettings]
    SET [Value] = @Value
    ,[LastUpdateTime] = GETDATE()
    WHERE Id=@Id
  </Update>
  <UpdateByKey>
    UPDATE [dbo].[GlobalSettings]
    SET [Value] = @Value
    ,[LastUpdateTime] = GETDATE()
    WHERE [Key]=@Key
  </UpdateByKey>
</SqlResource>
